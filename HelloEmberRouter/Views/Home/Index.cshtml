        <script type="text/x-handlebars" data-template-name="application">
            <h1>Hello Ember.Router!</h1>
            <h4>Sample app for learning purposes</h4>
            <img src="../../Images/banner.png" width="400" heigth="200" border="1" /> 
            {{view App.NavbarView controllerBinding="controller.controllers.navbarController"}}
            <br /><hr />
            <div class="content">
                {{outlet}}
            </div>
        </script>

        <script type="text/x-handlebars" data-template-name="navbar">
            <ul>
                <li><a href="#" {{action gotoHome}}>Home</a></li>
                <li><a href="#" {{action gotoContacts}}>Contacts</a></li>
            </ul><br />
        </script>

        <script type="text/x-handlebars" data-template-name="contact-table">
            <table>
                <thead>
                    <tr>
                        <th>Contact({{controller.contactsCount}})</th>
                        <th>Info</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            <a href="#" {{action contactAdd}}>New</a>
                        <td>
                    </tr>
                </tfoot>
                <tbody>
                {{#if controller.isLoaded}} 
                    {{#each contact in controller}}
                        {{view App.ContactListItemView contactBinding="contact"}}
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="3">
                            <img src="http://img256.imageshack.us/img256/4407/ajaxloading1.gif" alt="" /> Loading...
                        <td>
                    </tr>
                {{/if}}
                </tbody>
            </table>
        </script>

        <script type="text/x-handlebars" data-template-name="contact-table-row">
            <tr>
                <td>
                    <img {{bindAttr src="contact.imageUrl" alt="contact.fullName" title="contact.fullName"}} width="50" height="50" /><br />{{contact.fullName}}
                </td>
                <td>
                    Twitter: {{#if contact.twitter}}<a {{bindAttr href="contact.twitter"}} target='_blank'>Follow on Twitter</a>{{else}}-{{/if}}<br />
                </td>
                <td>
                    <a href="#" {{action contactDetails context="contact"}}>Details</a> | 
                    <a href="#" {{action contactEdit context="contact"}}>Edit</a> | 
                    <a href="#" {{action contactRemove context="contact"}}>Delete</a>
                </td>
            </tr>
        </script>

