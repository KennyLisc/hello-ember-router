        <script type="text/x-handlebars" data-template-name="contact-details">
            {{#if controller.isLoaded}} 
            <fieldset>
                <legend>Contact Details</legend>
                <div style="position: relative">
                    <div style="float: left">
                        <img {{bindAttr src="contact.imageUrl" alt="contact.fullName" title="contact.fullName"}} width="210" height="240" />
                        <br /><br />
                        <input type="button" {{action gotoContacts}} value="Back" /> 
                    </div>
                    <div style="float: left">
                        <table id="contacts-table" style="height: 280px">
                            <tr>
                                <td>First Name: </td>
                                <td>{{contact.firstName}}</td>
                            </tr>
                            <tr>
                                <td>Last Name: </td>
                                <td>{{contact.lastName}}</td>
                            </tr>
                            <tr>
                                <td>Alias: </td>
                                <td>{{contact.alias}}</td>
                            </tr>
                            <tr>
                                <td><img src="../../Images/orderedList0.png" /> Website: </td>
                                <td>{{#if contact.website}}<a {{bindAttr href="contact.website"}} target="_blank">{{contact.alias}}'s Website</a>{{else}} - {{/if}}</td>
                            </tr>
                            <tr>
                                <td><img src="../../Images/facebook.png" /> Facebook: </td>
                                <td>{{#if contact.facebook}}<a {{bindAttr href="contact.facebook"}} target="_blank">{{contact.alias}}'s Facebook Profile</a>{{else}} - {{/if}}</td>
                            </tr>
                            <tr>
                                <td><img src="../../Images/twitter.png" /> Twitter: </td>
                                <td>{{#if contact.twitter}}<a {{bindAttr href="contact.twitterLink"}} target="_blank">Follow {{contact.alias}} on Twitter</a>{{else}} - {{/if}}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </fieldset>
            {{else}}
                <img src="http://img256.imageshack.us/img256/4407/ajaxloading1.gif" alt="" /> Loading...
            {{/if}}
        </script>

        <script type="text/x-handlebars" data-template-name="contact-edit">
            <fieldset>
                <legend>Edit Contact</legend>
                <div style="position: relative">
