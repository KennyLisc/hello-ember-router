                        <img {{bindAttr src="contact.imageUrl" alt="contact.fullName" title="contact.fullName"}} width="210" height="240" />
                        <br /><br />
                        <input type="button" {{action gotoContacts}} value="Back" /> 
                        <input type="button" {{action submitUpdateContact on="click" context="contact"}} value="Update" /> 
