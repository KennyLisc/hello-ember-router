                            <tr>
                                <td>Twitter: </td>
                                <td>{{view Ember.TextField valueBinding="contact.twitter" placeHolder="Twitter ID goes here"}}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </fieldset>
        </script>

