                            </tr>
                            <tr>
                                <td>Last Name: </td>
                                <td>{{view Ember.TextField valueBinding="contact.lastName" placeHolder="Last name goes here"}}</td>
                            </tr>
                            <tr>
                                <td>Alias: </td>
                                <td>{{view Ember.TextField valueBinding="contact.alias" placeHolder="E=Mail goes here"}}</td>
                            </tr>
                            <tr>
                                <td>Website: </td>
                                <td>{{view Ember.TextField valueBinding="contact.website" placeHolder="Website Url goes here"}}</td>
                            </tr>
                            <tr>
                                <td>Facebook: </td>
                                <td>{{view Ember.TextField valueBinding="contact.facebook" placeHolder="Facebook Link goes here"}}</td>
