        <script type="text/x-handlebars" data-template-name="contact-table">
            <div>
                <span class="sctn-title">Contacts</span>
            </div>
            <br />
            <br />
            <table id="contacts-table">
                <thead>
                    <tr>
                        <td colspan="3">
                            <div>
                                <div style="float:left;font-size: 9pt; vertical-align: bottom;">
                                    {{controller.contactsCount}} Record(s)
                                </div>
                                <div>
                                    <td colspan="3"><input type="button" {{action contactAdd}} value="New" /></td>
                                </div>
                                <br />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>Contact</th>
                        <th>Twitter</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            <input type="button" {{action contactAdd}} value="New" />
                        <td>
                    </tr>
                </tfoot>
                <tbody>
                {{#if controller.isLoaded}} 
                    {{#if isEmptyCollection}}
                        You don't have any contacts :(
                    {{else}}
                        {{#each contact in controller}}
                            {{view App.ContactListItemView contactBinding="contact"}}
                        {{/each}}
                    {{/if}}
                {{else}}
                    <tr>
                        <td colspan="3">
                            <img src="http://img256.imageshack.us/img256/4407/ajaxloading1.gif" alt="" /> Loading...
                        <td>
                    </tr>
                {{/if}}
                </tbody>
            </table>
        </script>

        <script type="text/x-handlebars" data-template-name="contact-table-row">
            <tr>
                <td style="vertical-align: top;">
                    <img {{bindAttr src="contact.imageUrl" alt="contact.fullName" title="contact.alias"}} width="50" height="50" /><br />{{contact.fullName}}
                </td>
                <td> 
                    Twitter: {{#if contact.twitter}}<a {{bindAttr href="contact.twitterLink"}} target='_blank'>Follow on Twitter</a>{{else}}-{{/if}}<br />
                </td>
                <td>
                    <input type="button" {{action contactDetails context="contact"}} value="Details"/> |
                    <input type="button" {{action contactEdit context="contact"}} value="Edit"/> |
                    <input type="button" {{action contactRemove context="contact"}} value="Remove" />
                </td>
            </tr>
        </script>

