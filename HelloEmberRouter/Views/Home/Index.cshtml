                            </tr>
                            <tr>
                                <td>First Name: </td>
                                <td>{{view Ember.TextField valueBinding="contact.firstName" placeHolder="First name goes here"}}</td>
                            </tr>
                            <tr>
                                <td>Last Name: </td>
                                <td>{{view Ember.TextField valueBinding="contact.lastName" placeHolder="Last name goes here"}}</td>
                            </tr>
                            <tr>
