        <script type="text/x-handlebars" data-template-name="application">
            <h1>Hello Ember.Router!</h1>
            <h4>Sample app for learning purposes</h4>
            <img src="../../Images/banner.png" width="400" heigth="200" border="1" /> 
            {{view App.NavbarView controllerBinding="controller.controllers.navbarController"}}
            <br /><hr />
            <div class="content">
                {{outlet}}
            </div>
